<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/toolbar_login"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp">

            <customfonts.MyTextView_Roboto_Regular
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¡Hola Aventurero!"
                android:textColor="#3e4a59"
                android:textSize="30sp"/>

            <customfonts.MyTextView_Roboto_Regular
                android:id="@+id/label_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:background="#00000000"
                android:hint="Usuario"
                android:textColorHint="#3e4a59"
                android:textSize="15sp" />

            <customfonts.EditText_Roboto_Regular
                android:id="@+id/txtUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="#00000000"
                android:hint="Ingresa tu e-mail"
                android:textColorHint="#24272b"
                android:textSize="15sp" />

            <View
                android:layout_marginTop="17dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#c28e79"/>

            <customfonts.EditText_Roboto_Regular
                android:id="@+id/txtEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:background="#00000000"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:textColorHint="#4b5461"
                android:textSize="15sp" />
            <View
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:background="#d3dfef"/>
            <customfonts.MyTextView_Roboto_Regular
                android:layout_weight="1"
                android:layout_gravity="right"
                android:layout_marginTop="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿Perdiste tu contraseña?"
                android:textColor="#b98068"
                android:textSize="15sp" />

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:gravity="bottom"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <customfonts.MyTextView_Roboto_Regular
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="15dp"
            android:background="@drawable/rect1"
            android:gravity="center"
            android:text="Iniciar sesión"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <customfonts.MyTextView_Roboto_Regular
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¿Aún no tienes una cuenta?"
            android:textColor="#733e4a59"
            android:textSize="14sp"/>
        <customfonts.MyTextView_Roboto_Regular
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrate"
            android:textSize="14sp"
            android:textColor="#b98068"/>

    </LinearLayout>




</LinearLayout>